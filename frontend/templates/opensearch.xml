<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
<ShortName>{{if .Brand.Name}}{{.Brand.Name}}{{else}}Jive Search{{end}}</ShortName>
<Description>{{if .Brand.Name}}{{.Brand.Name}}{{else}}Jive Search{{end}}</Description>
<InputEncoding>UTF-8</InputEncoding>
<Image width="16" height="16" type="image/x-icon">{{.Brand.Host}}/static/icons/favicon.ico</Image>
<Url type="text/html" template="{{.Brand.Host}}">
  <Param name="q" value="{searchTerms}"/>
</Url>
<Url type="application/x-suggestions+json" template="/autocomplete?q={searchTerms}"/>
</OpenSearchDescription>